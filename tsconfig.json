{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,

    "baseUrl": ".",                       // âœ… important for @/* aliases
    "paths": {
      "@/*": ["src/*"]
    },

    "forceConsistentCasingInFileNames": true,

    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",

    // custom includes you added
    "src/features/weather/components/UnitToggle.jsx",
    "scripts/testDiary.js"
  ],
  "exclude": ["node_modules"]
}
